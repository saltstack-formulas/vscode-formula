# -*- coding: utf-8 -*-
# vim: ft=jinja

{%- set tplroot = tpldir.split('/')[0] %}
{%- import_yaml tplroot ~ "/defaults.yaml" as default_settings %}
{%- import_yaml tplroot ~ "/osfamilymap.yaml" as osfamilymap %}
{%- import_yaml tplroot ~ "/oskernelmap.yaml" as oskernelmap %}

{%- set _config = salt['config.get'](tplroot, default={}) %}
{%- set defaults = salt['grains.filter_by'](
      default_settings,
      default=tplroot,
      merge=salt['grains.filter_by']( osfamilymap, grain='os_family',
        merge=salt['grains.filter_by']( oskernelmap, grain='kernel',
          merge=salt['grains.filter_by']( _config, default='lookup'
          )
        )
      )
    )
%}
{%- set vscode = salt['grains.filter_by']( {'defaults': defaults}, default='defaults', merge=_config) %}

{%- if vscode.pkg.use_upstream == 'archive' %}
    {%- set url = '%s'|format(vscode.pkg.uri_a) %}
    {%- if grains.os_family == 'MacOS' %}
        {%- do vscode.pkg.archive.update({ 'name': '/Applications', 'source': url }) %}
    {%- else %}
        {%- set dir = vscode.pkg.archive.path ~ '-' ~ vscode.pkg.version %}
        {%- do vscode.config.update({'name': vscode.dir.archive ~ vscode.div ~ dir }) %}
        {%- do vscode.pkg.archive.update({ 'name': vscode.dir.archive, 'source': url }) %}
    {%- endif %}
{%- endif %}
